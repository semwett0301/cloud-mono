{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5",
    "paths": {
      "@project/meta": ["../types"]
    }
  },
  "paths": {
    "@project/meta": ["../../meta/index"]
  },
  "include": ["./src/",  "./declaration.d.ts", "./additional.d.ts",
    "../meta", ".eslintrc.js"],
  "exclude": ["node_modules", "./tools/**/*", "./build"]
}
